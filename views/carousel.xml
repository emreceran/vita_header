<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <template id="carsd_inherit" inherit_id="website.homepage" name="Custom home">

        <xpath expr="//div[@id='wrap'][1]" position="before">
            <!-- Stil Ayarları -->


            <div class="vh-100">

                <link href="https://fonts.googleapis.com/css2?family=Pacifico&amp;display=swap" rel="stylesheet"/>

                <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&amp;family=Pacifico&amp;family=Playwrite+IN:wght@100..400&amp;display=swap" rel="stylesheet"/>


                <style>
                    .carousel-container {
                    height: 75% !important; /* Üst div yüksekliği */
                    background-color: #3498db; /* Arka plan rengi */
                    overflow: hidden;
                    }

                    .carousel-inner,
                    .carousel-item {
                    height: 100%; /* Carousel'in üst divi doldurması */
                    width: 100%;  /* Carousel genişliği */
                    }

                    .carousel-item {
                    background-size: cover; /* Resim divi tamamen dolduracak şekilde ölçeklenir */
                    background-position: bottom; /* Görsellerin ortalanmasını sağlar */
                    }

                    /* Slogan Stili */
                    .slider-slogan {
                    position: absolute;
                    top: 50%;
                    left: 100%; /* Sağdan sola giriş için başlangıç konumu */
                    transform: translateY(-50%);
                    color: white;
                    font-size: 5rem; /* Yazı büyüklüğü */
                    font-weight: bold;
                    font-family: "Dancing Script", serif;
                    white-space: nowrap;
                    animation: slideInRight 2s ease-out forwards;
                    }

                    /* Sağdan sola kayan animasyon */
                    @keyframes slideInRight {
                    from {
                    left: 100%; /* Yazı ekran dışında sağda başlar */
                    }
                    to {
                    left: 50%; /* Yazı ekranın ortasında durur */
                    transform: translateX(-50%) translateY(-50%);
                    }
                    }
                </style>


                <!-- Üst Div ve Carousel -->
                <div class="carousel-container">
                    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel" style="width: 100%; height: 100%;">
                        <ol class="carousel-indicators o_we_no_overlay">
                            <li data-bs-slide-to="0" data-bs-target="#carouselExample"></li>
                            <li data-bs-slide-to="1" data-bs-target="#carouselExample" class="active" aria-current="true"></li>
                            <li data-bs-slide-to="2" data-bs-target="#carouselExample"></li>
                            <li data-bs-target="#carouselExample" data-bs-slide-to="3"></li>
                            <li data-bs-target="#carouselExample" data-bs-slide-to="4"></li>
                        </ol>

                        <div class="carousel-inner">
                            <!-- Slider 1 -->
                            <div class="carousel-item active img-fluid" style="background-image: url('/vita_header/static/src/img/slider1.webp'); position: relative;">
                                <div class="slider-slogan"> Her Adımda Güven... </div>
                            </div>

                            <!-- Slider 2 -->
                            <div class="carousel-item img-fluid" style="background-image: url('/vita_header/static/src/img/slider2.webp'); position: relative;">
                                <div class="slider-slogan">Etkili Denetim... </div>
                            </div>

                            <!-- Slider 3 -->
                            <div class="carousel-item img-fluid" style="background-image: url('/vita_header/static/src/img/slider3.webp'); position: relative;">
                                <div class="slider-slogan">Kaliteli Çözüm...</div>
                            </div>

                            <!-- Slider 4 -->
                            <div class="carousel-item img-fluid" style="background-image: url('/vita_header/static/src/img/slider4.jpg'); position: relative;">
                                <div class="slider-slogan">Net Sonuç...</div>
                            </div>

                            <!-- Slider 5 -->
                            <div class="carousel-item img-fluid" style="background-image: url('/vita_header/static/src/img/slider5.webp'); position: relative;">
                                <div class="slider-slogan">VİTA Mühendislik</div>
                            </div>
                        </div>

                        <!-- Önceki ve Sonraki Düğmeler -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
